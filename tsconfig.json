{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib/",
    "target": "es5",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@types"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
